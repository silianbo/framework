	</appender> -->

	<logger name="PAGE-DIGEST" additivity="false">
		<level value="INFO" />
		<appender-ref ref="PAGE-DIGEST-APPENDER" />
	</logger>
	
	<logger name="com.lb">
		<level value="INFO" />
	</logger>

	<root>
		<level value="INFO" />
		<appender-ref ref="stdout" />
		<appender-ref ref="COMMON-APPENDER"/>
		
